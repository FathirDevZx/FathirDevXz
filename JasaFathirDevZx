<script>
function sendCS(){
  const inputs=document.querySelectorAll('input, textarea');
  let msg='Halo Customer Service FathirDevZx,%0A';
  inputs.forEach(i=>{
    msg+=i.placeholder+': '+i.value+'%0A';
  });
  window.open('https://wa.me/6285811696114?text='+msg,'_blank');
}
</script>

